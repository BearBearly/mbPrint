mixin card(item)
  a.card(class=item.mod?"card_"+item.mod:'' href="#")
    .card__img
      img(src="img/"+item.img alt="img")
    .card__title=item.title
-;

mixin product(item)
  a.product(href="#")
    .product__img
      img(src="img/"+item.img alt="img")
    .product__title.title.title_product=item.title
-;


                